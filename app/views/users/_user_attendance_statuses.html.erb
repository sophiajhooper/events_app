<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendance Statuses

    <a data-toggle="collapse" href="#user_attendance_statuses_new_form">
      Add attendee
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.attendance_statuses.each do |attendee| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to attendee, attendee %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_attendance_statuses_new_form">
        <%= render partial: "users/user_attendance_statuses_new_form" %>
      </div>
    </div>

  </ul>
</div>
